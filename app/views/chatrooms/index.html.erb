<h1>Chat rooms</h1>

<p class="lead"><%= link_to 'New chat room', new_chatroom_path, class: 'btn btn-primary' %></p>

<% if @chatrooms %>
  <ul>
    <% @chatrooms.each do |chat| %>
      <li><%= link_to "Enter #{chat.topic}", chatroom_path(chat), class: 'btn btn-primary' %>
      <%= link_to "Delete this chatroom", chatroom_path(chat), 
                        method: :delete,
                        data: {confirm: "Are you sure?"}, 
                        class: "btn btn-md btn-danger" %></li>
    <% end %>
  </ul>
<% end %>
