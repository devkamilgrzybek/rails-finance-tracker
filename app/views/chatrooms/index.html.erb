<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

<div class="modal" id="myModal" role="dialog" data-backdrop="false">
  <div class="modal-content">
    <div class="modal-header modal-body modal-footer">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <div class="col-md-8 frame">
        <div id="chat-frame">
          <%= render 'chatrooms/show' %>
        </div>
      </div>
      <div class="col-md-4 panel-body">
        <p class="lead"><%= link_to 'New chat room', new_chatroom_path, class: 'btn btn-primary' %></p>
        <% if @chatrooms %>
          <ul>
            <% @chatrooms.each do |chat| %>   
              <li style = "list-style-type: none">
                <strong><%= chat.topic %></strong>
                <%= link_to "Enter", chatroom_path(chat),remote: true , class: 'btn btn-xs btn-primary' %>
                <%= link_to "Delete this chatroom", chatroom_path(chat), 
                                  method: :delete,
                                  data: {confirm: "Are you sure?"}, 
                                  class: "btn btn-xs btn-danger" %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
  </div>
</div>


